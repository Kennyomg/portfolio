a(href='games')= '<<back'
article(ng-controller='GamesController')
  h2 Add new game
  form(id='uploadForm', enctype='multipart/form-data', ng-submit="save()")
    label(for='image') Image:
    input(type='button', ng-file-select, ng-model='files' name='image')
    label(for='title') Title:
    input(type='text', ng-model='gameTitle', name='title')
    p Description
    textarea(ng-model='gameDesc', cols='50', rows='15')
    input(type='submit', value='Create')